unit unAlunoDAO;

interface

uses
  SqlExpr, unConexao, unSistemaControle;


type
  TClienteDAO = class
  private
    FConexao: TConexao;
  public
    constructor Create;
    destructor Destroy; override;

    function Obter: TSQLQuery;
  end;


implementation

{ TClienteDAO }

constructor TClienteDAO.Create;
begin
  FConexao := TSistemaControle. GetInstancia().Conexao;
end;

destructor TClienteDAO.Destroy;
begin

  inherited;
end;

function TClienteDAO.Obter: TSQLQuery;
var
  VQuery: TSQLQuery;
begin
  VQuery := FConexao.CriarQuery();
end;

end.
