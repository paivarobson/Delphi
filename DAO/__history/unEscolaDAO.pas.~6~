unit unEscolaDAO;

interface

uses
  unEscolaModelo, unDados;

type
  TEscolaDAO = class
    procedure CarregarEscola(AEscolaModelo: TEscolaModelo);
  end;

implementation


{ TEscolaDAO }

procedure TEscolaDAO.CarregarEscola(AEscolaModelo: TEscolaModelo);
begin
  fmdados.tbdsEscola.IndexFields[0] := AEscolaModelo.Codigo;
  fmdados.tbdsEscola.IndexFields[1] := AEscolaModelo.Nome;
  fmdados.tbdsEscola.IndexFields[2] := AEscolaModelo.DataCadastro;
  fmdados.tbdsEscola.IndexFields[3] := AEscolaModelo.Cep;
  fmdados.tbdsEscola.IndexFields[4] := AEscolaModelo.Rua;
  fmdados.tbdsEscola.IndexFields[5] := AEscolaModelo.Numero;
  fmdados.tbdsEscola.IndexFields[6] := AEscolaModelo.Complemento;
  fmdados.tbdsEscola.IndexFields[7] := AEscolaModelo.Bairro;
  fmdados.tbdsEscola.IndexFields[8] := AEscolaModelo.Cidade;
end;

end.
