unit unAlunoDAO;

interface

uses
  SqlExpr, unConexao, unSistemaControle, SysUtils;


type
  TClienteDAO = class
  private
    FConexao: TConexao;
  public
    constructor Create;
    destructor Destroy; override;

    function Obter: TSQLQuery;
  end;


implementation

{ TClienteDAO }

constructor TClienteDAO.Create;
begin
  FConexao := TSistemaControle. GetInstancia().Conexao;
end;

destructor TClienteDAO.Destroy;
begin
  FreeAndNil(FConexao);
  inherited;
end;

function TClienteDAO.Obter: TSQLQuery;
var
  VQuery: TSQLQuery;
begin
  VQuery := FConexao.CriarQuery();

  VQuery.CommandText := 'SELECT ALUMAT, ALUNOME FROM ALUNO';
  VQuery.Open;

  Result := VQuery;
end;

end.
