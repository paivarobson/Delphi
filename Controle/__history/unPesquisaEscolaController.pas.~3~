unit unPesquisaEscolaController;

interface

uses DB, DBClient;  

type
    TPesquisaEscolaController = class
  public
    function DadosCDS: TClientDataSet;
    function DadosFieldCodigo: TIntegerField;
    function DadosFieldData: TSQLTimeStampField;

  end;

implementation

uses
  unDados;

//Método para o uso do ClientDataSet externamente
function TPesquisaEscolaController.DadosCDS: TClientDataSet;
begin
  Result := fmdados.tbdsEscola;
end;

function TPesquisaEscolaController.DadosFieldCodigo: TIntegerField;
begin
  Result := fmdados.tbdsEscolaESCCOD;
end;

function TPesquisaEscolaController.DadosFieldData: TSQLTimeStampField;
begin
  Result := fmdados.tbdsEscolaESCDATACAD;
end;

end.
